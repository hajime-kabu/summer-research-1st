{
    "Data": {
        "Dir": "data",
        "PastData": {
            "File": "past-tokyo-weather.tsv",
            "ReadCsvParams": {
                "sep": "\t",
                "header": 0,
                "skiprows": [ 1, 2 ],
                "parse_dates": [ "年月日" ]
            }
        },
        "CurrentData": {
            "File": "current-tokyo-weather.tsv",
            "ReadCsvParams": {
                "sep": "\t",
                "header": 0,
                "parse_dates": [ "年月日" ],
                "na_values": [ "--" ]
            }
        },
        "FeatureEngineering": {
            "Y": {
                "OriginalColumn": "降水量の合計(mm)",
                "Threshold": 0.0
            },
            "Index": "年月日",
            "Query": "index.dt.month == 8 or index.dt.day >= 21",
            "N": 10
        }
    },
    "Model": {
        "Classifier": "SVC",
        "ParamGrid": [
            {
                "C": [1, 10, 100, 1000],
                "kernel": ["linear"]
            },
            {
                "C": [1, 10, 100, 1000],
                "gamma": [0.001, 0.0001],
                "kernel": ["rbf"]               
            }
        ],
        "CV": 5,
        "Scoring": "f1"
    }
}
